<div class="spot-popup">
    <h3>{{name}}</h3>
    {{#if assets.length}}
    <img src="{{assetUrl}}" />
    {{/if}}
    <div> <b>Description</b>: {{description}}</div>
    <div> <b>Rating</b>: {{rating}}</div>
    <div><button type="button" class="btn btn-lg btn-success"><i class="fa fa-smile-o"></i></button><button type="button" class="btn btn-lg btn-danger"><i class="fa fa-frown-o"></i></button></div>

    <div>You are within  <b>{{distance}}</b> kilometres from this point </div>
</div>
