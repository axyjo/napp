<div class="spotConfirm">
    <div class="confirm section">
        Are you sure you wish to create a new Spot here?
        <button type="button" class="btn btn-primary">Yes</button>
        <button type="button" class="btn btn-danger">NO! GET ME OUT.</button>
    </div>
    <div class="form section">
        <form role="form">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" placeholder="MC Comfy" name="name">
                <br>
                <label for="description">Description</label>
                <input type="text" class="form-control" id="description" placeholder="Lot of comfy place!" name="description">
                <label for="image">Add a photo</label>
                <div class="fileinput fileinput-new" data-provides="fileinput">
                    <div class="fileinput-new thumbnail" style="width: 275px; height: 150px;">
                        <img data-src="holder.js/100%x100%" alt="...">
                    </div>
                    <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 275px; max-height: 150px;"></div>
                    <div>
                        <span class="btn btn-default btn-file"><span class="fileinput-new">Select image</span><span class="fileinput-exists">Change</span><input type="file" name="image"></span>
                        <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">Remove</a>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div>
